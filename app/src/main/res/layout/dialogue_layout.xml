<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:src="@drawable/res_winner"
        android:id="@+id/winnerImg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congrat's You won"
        android:textSize="25sp"
        android:id="@+id/winnerText"
        android:fontFamily="@font/chewy"
        android:textAlignment="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"
            android:text="Your Score: "
            android:id="@+id/uText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:fontFamily="@font/jua"
            android:layout_toRightOf="@id/uText"
            android:textColor="#DC1111"
            android:id="@+id/uScore"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:fontFamily="@font/jua"
            android:textColor="#E81313"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5sp"
            android:id="@+id/compScore"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"
            android:text="Comp Score: "
            android:layout_toLeftOf="@id/compScore"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tableOne"
                android:layout_alignParentStart="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Table"
                    android:textSize="20sp"
                    android:fontFamily="@font/jua"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:maxLength="16"
                    android:fontFamily="@font/graduate"
                    android:id="@+id/userTable"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tableTwo"
                android:layout_marginStart="15sp"
                android:layout_toEndOf="@id/tableOne"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comp Table"
                    android:textSize="20sp"
                    android:fontFamily="@font/jua"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:maxLength="16"
                    android:fontFamily="@font/graduate"
                    android:id="@+id/compTable"/>
            </LinearLayout>
        </RelativeLayout>
    </HorizontalScrollView>
    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Replay"
        android:textSize="20sp"
        android:id="@+id/replay"
        android:fontFamily="@font/jua"
        android:drawableLeft="@drawable/ic_replay"
        android:background="@drawable/btn"
        app:backgroundTint="@null"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="20sp"
        android:id="@+id/cancel"
        android:fontFamily="@font/jua"
        android:drawableLeft="@drawable/ic_cancel"
        android:background="@drawable/btn"
        app:backgroundTint="@null"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>