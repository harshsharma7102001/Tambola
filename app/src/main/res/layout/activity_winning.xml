        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_marginBottom="7sp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:fontFamily="@font/jua"
            android:text="Prev No:"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/no"
            android:text=""
            android:id="@+id/prevNo"
            android:fontFamily="@font/jua"
            android:textSize="20sp"
            android:layout_marginStart="4sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/prevNo"
            android:layout_toLeftOf="@id/image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/turnDecider"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/jua"
                android:text="Make Table"
                android:textAlignment="center"
                android:textSize="25sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:textAlignment="center"
                android:id="@+id/currNumber"
                android:fontFamily="@font/chewy"
                android:textColor="#EF0A0A"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"
            android:orientation="vertical"
            android:id="@+id/image">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score"
                android:fontFamily="@font/jua"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:padding="5dp"
                android:background="@drawable/score_back"
                android:textSize="20sp"
                android:fontFamily="@font/jua"
                android:textAlignment="center"
                android:id="@+id/score"/>
        </LinearLayout>
